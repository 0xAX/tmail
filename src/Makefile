.DEFAULT_GOAL: $(TMAIL_EXECUTABLE)

include ../mk/Common.mk
include ../mk/Build.mk

# lexer and parser source code
CONFIG_PARSER = config_parser.y
CONFIG_LEXER = config_parser.l

# object files for
TMAIL_OBJS += config.o
TMAIL_OBJS += tmail.o
TMAIL_OBJS += mime.o
TMAIL_OBJS += message.o
TMAIL_OBJS += send-email.o

# object files for sys lib
LIBSYS_OBJS += libsys/at_exit.o
LIBSYS_OBJS += libsys/connect.o
LIBSYS_OBJS += libsys/fcntl_utils.o
LIBSYS_OBJS += libsys/gethostname.o
LIBSYS_OBJS += libsys/inet.o

# object files for utils lib
LIB_UTILS_OBJS += libutils/list.o
LIB_UTILS_OBJS += libutils/stack.o
LIB_UTILS_OBJS += libutils/hashmap.o

# object files for smtp lib
LIB_SMTP_OBJS += libsmtp/attachment.o
LIB_SMTP_OBJS += libsmtp/ehlo.o
LIB_SMTP_OBJS += libsmtp/mail_from.o
LIB_SMTP_OBJS += libsmtp/rcpt_to.o
LIB_SMTP_OBJS += libsmtp/data_msg.o
LIB_SMTP_OBJS += libsmtp/body.o
LIB_SMTP_OBJS += libsmtp/quit.o
LIB_SMTP_OBJS += libsmtp/smtp.o

# Object files generated by flex/bison
PARSER_OBJECTS = config_parser.tab.o lex.yy.o

# object files for encoding lib
LIB_ENCODING_OBJS += libencoding/base64.o

# other apps
SMTP_CAPS_OBJS += smtp-caps.o
SMTP_CAPS_ADDITIONAL_OBJS += mime.o

# set of directories with C headers needed for tmail
INCLUDES+=-Ilibsys/
INCLUDES+=-Ilibutils/                    
INCLUDES+=-Ilibsmtp/
INCLUDES+=-Ilibencoding/
INCLUDES+=-I./

# Final compiler flags
COMPILER_FLAGS = $(LIBS_PATH) $(INCLUDES) $(LINKER_OPTS) $(CC_EXEC_FLAGS)

# set of object file that linked together with tmail
TMAIL_OBJECT_FILES_DEPS += $(LIBSYS_OBJS)
TMAIL_OBJECT_FILES_DEPS += $(LIB_UTILS_OBJS)
TMAIL_OBJECT_FILES_DEPS += $(PARSER_OBJECTS)
TMAIL_OBJECT_FILES_DEPS += $(LIB_ENCODING_OBJS)
TMAIL_OBJECT_FILES_DEPS += $(LIB_SMTP_OBJS)

# set of object file that linked together with smtp-caps
SMTP_CAPS_OBJECT_FILES_DEPS += $(LIBSYS_OBJS)
SMTP_CAPS_OBJECT_FILES_DEPS += $(LIB_UTILS_OBJS)
SMTP_CAPS_OBJECT_FILES_DEPS += $(LIB_ENCODING_OBJS)
SMTP_CAPS_OBJECT_FILES_DEPS += $(LIB_SMTP_OBJS)
SMTP_CAPS_OBJECT_FILES_DEPS += $(SMTP_CAPS_ADDITIONAL_OBJS)

$(TMAIL_EXECUTABLE): $(PARSER_OBJECTS) $(TMAIL_OBJS)
	$(QUIET_CC) $(TMAIL_CC)	$(COMPILER_FLAGS) ../$@ $(TMAIL_OBJECT_FILES_DEPS) $(TMAIL_OBJS) $(LIBS)

$(SMTP_CAPS_EXECUTABLE): $(SMTP_CAPS_OBJS)
	$(QUIET_CC) $(TMAIL_CC)	$(COMPILER_FLAGS) ../$@ $(SMTP_CAPS_OBJECT_FILES_DEPS) $(SMTP_CAPS_OBJS) $(LIBS)

config_parser.tab.o: $(CONFIG_PARSER)
	$(BISON) -d -v $(CONFIG_PARSER)
	$(QUIET_CC) $(TMAIL_CC) $(INCLUDES) -c config_parser.tab.c

lex.yy.o: $(CONFIG_LEXER)
	$(FLEX) $(CONFIG_LEXER)
	$(QUIET_CC) $(TMAIL_CC) $(INCLUDES) -c lex.yy.c

%.o: %.c
	$(QUIET_CC) $(TMAIL_CC) $(INCLUDES) $(CFLAGS_OBJS) $@ $<

$(CLEAN_TARGET):
	@echo "./src"
	$(QUIET_CLEAN_OBJECTS) $(RM) $(OBJECT_FILES)
	$(QUIET_CLEAN_OBJECTS) $(RM) *.output
	$(QUIET_CLEAN_OBJECTS) $(RM) *.tab.c *.tab.h *.tab.o *.yy.c
	@cd $(TMAIL_SYS_LIB_DIR) && $(MAKE) $(MAKE_FLAGS) $(CLEAN_TARGET)
	@cd $(TMAIL_UTILS_LIB_DIR) && $(MAKE) $(MAKE_FLAGS) $(CLEAN_TARGET)
	@cd $(TMAIL_SMTP_LIB_DIR) && $(MAKE) $(MAKE_FLAGS) $(CLEAN_TARGET)
	@cd $(TMAIL_ENCODING_LIB_DIR) && $(MAKE) $(MAKE_FLAGS) $(CLEAN_TARGET)
	@cd ./tests && $(MAKE) $(MAKE_FLAGS) $(CLEAN_TARGET)

.PHONY: $(CLEAN_TARGET)
